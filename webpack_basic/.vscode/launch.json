{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Webpack Basic - Run the main program",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/src/main.js",
      "preLaunchTask": "build",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dest/**.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Babel Basic - Run all Jest tests",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": ["--runInBand", "--coverage"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Babel Node Basic - Run the main program",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/src/main.js",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/babel-node",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/babel-node.cmd"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Babel Node Basic - Run all Jest tests",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": ["--runInBand", "--coverage"],
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/babel-node",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/babel-node.cmd"
      }
    },
  ]
}
