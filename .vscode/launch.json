{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Node Basic - Run the main program",
      "cwd": "${workspaceFolder}/node_basic",
      "program": "${workspaceFolder}/node_basic/main.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Node Basic - Run all Jest tests",
      "program": "${workspaceFolder}/node_basic/node_modules/jest/bin/jest",
      "cwd": "${workspaceFolder}/node_basic",
      "args": ["--runInBand", "--coverage"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
