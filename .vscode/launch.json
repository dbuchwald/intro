{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Node Basic - Run the main program",
      "cwd": "${workspaceFolder}/node_basic",
      "program": "${workspaceFolder}/node_basic/main.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Node Basic - Run all Jest tests",
      "program": "${workspaceFolder}/node_basic/node_modules/jest/bin/jest",
      "cwd": "${workspaceFolder}/node_basic",
      "args": ["--runInBand", "--coverage"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Babel Basic - Run the main program",
      "cwd": "${workspaceFolder}/babel_basic",
      "program": "${workspaceFolder}/babel_basic/src/main.js",
      "preLaunchTask": "build",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/babel_basic/dest/**.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Babel Basic - Run all Jest tests",
      "cwd": "${workspaceFolder}/babel_basic",
      "program": "${workspaceFolder}/babel_basic/node_modules/jest/bin/jest",
      "args": ["--runInBand", "--coverage"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Babel Node Basic - Run the main program",
      "cwd": "${workspaceFolder}/babel_basic",
      "program": "${workspaceFolder}/babel_basic/src/main.js",
      "runtimeExecutable": "${workspaceFolder}/babel_basic/node_modules/.bin/babel-node",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/babel_basic/node_modules/.bin/babel-node.cmd"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Babel Node Basic - Run all Jest tests",
      "cwd": "${workspaceFolder}/babel_basic",
      "program": "${workspaceFolder}/babel_basic/node_modules/jest/bin/jest",
      "args": ["--runInBand", "--coverage"],
      "runtimeExecutable": "${workspaceFolder}/babel_basic/node_modules/.bin/babel-node",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/babel_basic/node_modules/.bin/babel-node.cmd"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Redux Basic - Run all Jest tests",
      "program": "${workspaceFolder}/redux_basic/node_modules/jest/bin/jest",
      "cwd": "${workspaceFolder}/redux_basic",
      "args": ["--runInBand", "--coverage"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
