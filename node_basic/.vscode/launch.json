{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Node Basic - Run the main program",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/main.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Node Basic - Run all Jest tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "cwd": "${workspaceFolder}",
      "args": ["--runInBand"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
  ]
}
